# Application
APP_NAME=PineCMS
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_SUPPORTED_LOCALES=en,de

# Database (SQLite for structured data)
DB_CONNECTION=sqlite
DB_DATABASE=database/pinecms.sqlite

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=pinecms_cache

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIES=false

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Content (Flat-File Storage)
CONTENT_PATH=content
CONTENT_CACHE_ENABLED=true
CONTENT_CACHE_LIFETIME=3600

# Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# Authentication
AUTH_TOKEN_EXPIRY=3600
AUTH_REFRESH_TOKEN_EXPIRY=2592000
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_TIME=900

# Activity Log
ACTIVITY_LOG_ENABLED=true
ACTIVITY_LOG_DELETE_RECORDS_OLDER_THAN_DAYS=365

# Image Processing
IMAGE_DRIVER=gd
IMAGE_CACHE_ENABLED=true
IMAGE_CACHE_LIFETIME=86400
IMAGE_MAX_WIDTH=2000
IMAGE_MAX_HEIGHT=2000
IMAGE_QUALITY=85

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Frontend (VILT)
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_APP_LOCALE="${APP_LOCALE}"
VITE_APP_FALLBACK_LOCALE="${APP_FALLBACK_LOCALE}"

# Testing
TESTING=false
